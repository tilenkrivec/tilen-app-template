# Authentication
# Single password for application access
AUTH_PASSWORD=your-secure-password-here
# Secret key for JWT encryption (generate with: openssl rand -base64 32)
AUTH_SECRET=your-secret-key-here

# Hasura GraphQL
# Your Hasura GraphQL endpoint URL
NEXT_PUBLIC_HASURA_GRAPHQL_ENDPOINT=https://your-hasura-instance.com/v1/graphql
# Hasura admin secret for privileged operations
HASURA_ADMIN_SECRET=your-hasura-admin-secret

# Hetzner Object Storage (S3-Compatible)
# Access credentials for Hetzner Object Storage
HETZNER_ACCESS_KEY_ID=your-access-key-id
HETZNER_SECRET_ACCESS_KEY=your-secret-access-key
# Storage bucket name
HETZNER_BUCKET_NAME=your-bucket-name
# Region of the storage bucket
HETZNER_REGION=eu-central-1
# S3 endpoint URL (e.g., https://fsn1.your-objectstorage.com)
HETZNER_ENDPOINT=https://fsn1.your-objectstorage.com
